<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/swipe_layout_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/one_padding"
        android:paddingRight="@dimen/one_padding"
        android:layout_marginTop="@dimen/half_padding"
        android:layout_marginBottom="@dimen/half_padding"
        android:background="@drawable/file_item"
        android:orientation="horizontal"
        >
        <com.wolfbang.shared.view.LabelValueColumnView
            android:id="@+id/overwrite_a_item_value_view"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            app:label_layout_weight="0.33"
            app:label_font_size="14sp"
            app:label_color="@color/black"
            app:label_gravity="left"
            app:label="xxxxxaaaaaxxxxxaaa"
            app:value_font_size="14sp"
            app:value_color="@color/grey_dark_med"
            app:value_gravity="left"
            app:value="2018 Mar 15\n00:11:00.000 AEDT"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RadioGroup
                android:id="@+id/overwrite_radio_group"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/overwrite_radio_button_a"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />
                <RadioButton
                    android:id="@+id/overwrite_radio_button_none"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />
                <RadioButton
                    android:id="@+id/overwrite_radio_button_b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overwrite/none ?"
                />
        </LinearLayout>
        <com.wolfbang.shared.view.LabelValueColumnView
            android:id="@+id/overwrite_b_item_value_view"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            app:label_layout_weight="0.33"
            app:label_font_size="14sp"
            app:label_color="@color/black"
            app:label_gravity="right"
            app:label="xxxxxaaaaaxxxxxaaa"
            app:value_font_size="14sp"
            app:value_color="@color/grey_dark_med"
            app:value_gravity="right"
            app:value="2018 Mar 15\n00:11:00.000 AEDT"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/one_padding"
        android:paddingRight="@dimen/one_padding"
        android:layout_marginTop="@dimen/half_padding"
        android:layout_marginBottom="@dimen/half_padding"
        android:background="@drawable/file_item"
        android:orientation="vertical"
        android:layout_gravity="right"
        >
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="16sp"
            android:textColor="@color/black"
            tools:text="file name description"/>
        <TextView
            android:id="@+id/item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="14sp"
            android:textColor="@color/grey_dark"
            android:gravity="right"
            tools:text="to be overwritten on: Dell_Mint_Music"
            />

    </LinearLayout>

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_medium"
        android:visibility="visible"/>

</com.daimajia.swipe.SwipeLayout>
