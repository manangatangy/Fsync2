<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/default_gap"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.wolfbang.shared.LabelValueRowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/app_name"
            tools:value="$10,215.30"
            app:label_font_size="20sp"
            android:layout_margin="@dimen/default_padding"
            app:label_style="normal"

            />

        <TextView
            android:id="@+id/feature1_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Feature1Fragment"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/feature1_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/feature1_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/feature1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Perform a task"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>
