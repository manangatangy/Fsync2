<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/one_padding"
    >

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_padding"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/radio_background"
        android:paddingLeft="@dimen/one_and_half_padding"
        android:layout_marginRight="@dimen/double_padding"
        >

        <TextView
            android:id="@+id/text_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            tools:text="copy from:"
            android:gravity="start"
            android:paddingLeft="@dimen/one_and_half_padding"
            />
        <TextView
            android:id="@+id/text_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            tools:text="DELL_MUSIC_DIR"
            android:gravity="start"
            android:paddingLeft="@dimen/one_and_half_padding"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey_dark"
            tools:text="3 files"
            android:gravity="end"
            />
        <TextView
            android:id="@+id/text_dirs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey_dark"
            tools:text="4 dirs"
            android:gravity="end"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_chevron"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        tools:visibility="visible"
        android:src="@drawable/red_right_chevron"/>

</LinearLayout>
