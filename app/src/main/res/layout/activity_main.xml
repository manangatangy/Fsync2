<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_medium"
    tools:context="com.wolfbang.fsync.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_light"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/mission_summary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="MissionSummary"
        />
    <Button
        android:id="@+id/feature2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="AbstractMvpView Activity demo"
        />

    <com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@color/grey_med_dark"
            android:orientation="horizontal"
            >
            <com.wolfbang.shared.view.NestedRadioGroup
                android:id="@+id/precedence_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_padding"
                android:layout_marginBottom="@dimen/half_padding"
                android:layout_marginLeft="@dimen/single_padding"
                android:layout_marginRight="@dimen/single_padding"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <com.wolfbang.shared.view.LabelValueColumnView
                    android:id="@+id/overwrite_a_item_value_view"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    app:is_selectable="true"
                    app:select_state="select_off"
                    app:label_layout_weight="0.33"
                    app:label_font_size="14sp"
                    app:label_color="@color/black"
                    app:label_gravity="centre"
                    app:label="xxxxxaaaaaxxxxx"
                    app:value_font_size="14sp"
                    app:value_color="@color/grey_dark_med"
                    app:value_gravity="centre"
                    app:value="30 Mar 2018\n00:00:00 +1100"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <com.wolfbang.shared.view.LabelValueColumnView
                    android:id="@+id/overwrite_none_item_value_view"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    app:is_selectable="true"
                    app:select_state="select_on"
                    app:label_layout_weight="0.01"
                    app:label_font_size="14sp"
                    app:label_color="@color/black"
                    app:label_gravity="left"
                    app:label=""
                    app:value_font_size="14sp"
                    app:value_color="@color/grey_dark_med"
                    app:value_gravity="centre"
                    app:value="Do\nnothing"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <com.wolfbang.shared.view.LabelValueColumnView
                    android:id="@+id/overwrite_b_item_value_view"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    app:is_selectable="true"
                    app:select_state="select_off"
                    app:label_layout_weight="0.33"
                    app:label_font_size="14sp"
                    app:label_color="@color/black"
                    app:label_gravity="centre"
                    app:label="xxxxxaaaaaxxxxx"
                    app:value_font_size="14sp"
                    app:value_color="@color/grey_dark_med"
                    app:value_gravity="centre"
                    app:value="30 Mar 2018\n00:00:00 +1100"
                    />

            </com.wolfbang.shared.view.NestedRadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/file_item"
            android:elevation="5dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layout_surface"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/one_padding"
                android:paddingRight="@dimen/one_padding"
                android:layout_marginTop="@dimen/half_padding"
                android:layout_marginBottom="@dimen/half_padding"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"

                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="file name description"/>
                <com.wolfbang.shared.view.LabelValueColumnView
                    android:id="@+id/item_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:is_selectable="false"
                    app:label_layout_weight="0.5"
                    app:label_font_size="14sp"
                    app:label_color="@color/black"
                    app:label_gravity="right"
                    app:label="to be overwritten on:"
                    app:value_font_size="14sp"
                    app:value_color="@color/grey_dark_med"
                    app:value_gravity="right"
                    app:value="Dell-Mint-Music"
                    />

            </LinearLayout>

        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>










    <com.wolfbang.fsync.view.PathScrollerView
