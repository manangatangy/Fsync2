<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <declare-styleable name="LabelValueColumnView">
        <attr name="select_state">
            <enum name="select_none" value="0"/>
            <enum name="select_off" value="1"/>
            <enum name="select_on" value="2"/>
        </attr>
        <attr name="is_selectable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="NestedRadioButton">
        <attr name="radio_state">
            <enum name="radio_none" value="0"/>
            <enum name="radio_off" value="1"/>
            <enum name="radio_on" value="2"/>
        </attr>
        <attr name="heading_text" format="string"/>
        <attr name="subheading_text" format="string"/>
        <attr name="files_text" format="string"/>
        <attr name="dirs_text" format="string"/>
        <attr name="is_switchable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ItemRowView">
        <attr name="title" format="string"/>
        <attr name="description" format="string"/>
        <attr name="extra_data" format="string"/>
        <attr name="chevron_visible">
            <enum name="no" value="0"/>
            <enum name="yes" value="1"/>
        </attr>
        <attr name="divider_visible">
            <enum name="no" value="0"/>
            <enum name="yes" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LabelValueView">
        <attr name="label" format="string"/>
        <attr name="value" format="string"/>

        <attr name="label_layout_weight" format="float"/>

        <attr name="label_color" format="color"/>
        <attr name="label_font" format="string"/>
        <attr name="label_font_size" format="dimension"/>
        <attr name="label_style">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
        <attr name="value_color" format="color"/>
        <attr name="value_font" format="string"/>
        <attr name="value_font_size" format="dimension"/>
        <attr name="value_style">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
        <attr name="overall_padding_left" format="dimension"/>
        <attr name="overall_padding_right" format="dimension"/>
        <attr name="overall_padding_top" format="dimension"/>
        <attr name="overall_padding_bottom" format="dimension"/>

        <attr name="label_gravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="centre" value="2"/>
        </attr>
        <attr name="value_gravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="centre" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TextButtonView">
        <attr name="text" format="string"/>
        <attr name="text_color" format="color"/>
        <attr name="text_font" format="string"/>
        <attr name="text_font_size" format="dimension"/>
        <attr name="text_style">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
        <attr name="button" format="string"/>
    </declare-styleable>

</resources>
