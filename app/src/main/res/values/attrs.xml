<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="LabelValueRowView">
        <attr name="labelWeight" format="float"/>
        <attr name="labelSize" format="dimension"/>
        <attr name="valueSize" format="dimension"/>
        <attr name="labelColor" format="color"/>
        <attr name="valueColor" format="color"/>
        <attr name="labelText" format="reference"/>
        <attr name="valueText" format="reference"/>
        <attr name="labelGravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="valueGravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>
</resources>
